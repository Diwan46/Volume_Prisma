<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tutorial.diwan.task3.MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menghitung VOLUME Prisma"
        android:textSize="25dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="132dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/prisma" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Panjang alas"
        android:textSize="15dp"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/input_panjang_alas"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="10dp"
        android:inputType="numberDecimal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tinggi alas"
        android:textSize="15dp"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/input_tinggi_alas"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="10dp"
        android:inputType="numberDecimal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tinggi prisma"
        android:textSize="15dp"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/input_tinggi_prisma"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="10dp"
        android:inputType="numberDecimal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hitung"
        android:layout_marginLeft="20dp"
        android:id="@+id/button_hitung"
        android:onClick="hitung"/>

    <TextView
        android:id="@+id/hasil"
        android:layout_width="109dp"
        android:layout_height="28dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="" />

</LinearLayout>
